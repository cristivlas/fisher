#:kivy 1.11.0
<Root>:
    cols: 1
    BoxLayout:
        canvas:
            Color:
                rgb: 0.25, 0.25, 0.25
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'horizontal'
        size_hint: 1, 0.1
        
        Button:
            id: new
            text: 'New'
            on_press: app.new_game()

        Button:
            id: undo
            text: 'Undo'
            on_press: app.undo_move()

        Button:
            text: 'About'
            on_press: app.about()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.075

        Label:
            size_hint: 0.085, 1
            font_size: 16
            id: move

        Label:
            id: status
            font_size: 16
            markup: True

    BoxLayout:
        orientation: 'vertical'
        cols: 1
        canvas:
            Color:
                rgb: 0.5, 0.5, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        Board:
            id: board
